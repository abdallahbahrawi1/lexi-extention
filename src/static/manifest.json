{
  "manifest_version": 3,
  "name": "VocabBoost",
  "version": "1.0",
  "description": "Learn while browsing.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "identity",
    "https://*/"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "https://api.groq.com/*" 
  ]
}