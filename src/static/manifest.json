{
  "manifest_version": 3,
  "name": "lexilearn",
  "version": "1.0",
  "description": "Learn while browsing.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "identity",
    "alarms"
  ],
  "host_permissions": [
    "https://api.together.ai/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Click to learn",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [],
      "matches": ["<all_urls>"]
    }
  ]
}
